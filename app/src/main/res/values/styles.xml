<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/button_padding_vertical_10dp</item>
        <item name="android:paddingHorizontal">@dimen/button_padding_horizontal_20dp</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_text_top_rectangle</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingVertical">@dimen/padding_8dp</item>
        <item name="paddingStart">@dimen/padding_8dp</item>
    </style>

    <style name="StyleTextIngredient" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTopRectangle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
        <item name="android:paddingVertical">@dimen/button_padding_vertical_10dp</item>
        <item name="android:paddingHorizontal">@dimen/button_padding_vertical_10dp</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:textColor">@color/color_text_top_rectangle</item>
        <item name="android:textSize">@dimen/text_size_rectangle_top</item>
    </style>

    <style name="StyleDescriptionCategory" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingHorizontal">@dimen/padding_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:textColor">@color/color_item</item>
        <item name="android:textSize">12sp</item>

    </style>

</resources>