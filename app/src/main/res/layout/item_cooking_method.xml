<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100."
        />

    <TextView
        android:id="@+id/tvDescriptionMethodCooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/montserrat_regular"
        android:paddingHorizontal="@dimen/margin_12dp"
        android:paddingVertical="@dimen/margin_16dp"
        android:textSize="@dimen/text_size_14sp"
        tools:text="Лук нарежьте кольцами и добавьте к фаршу. Обжаривайте вместе до золотистой корки." />

</LinearLayout>